{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:monthly",
    ":timezone(Asia/Singapore)",
    ":dependencyDashboard"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "docker-compose": {
    "enabled": false
  },
  "labels": [
    "renovate"
  ],
  "prBodyNotes": [
    "{{#if isMajor}}:warning: MAJOR MAJOR MAJOR :warning:{{/if}}"
  ],
  "commitMessagePrefix": "chore: ",
  "major": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": false
    },
    {
      "description": "Automatically group and merge minor and patch-level updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "matchManagers": [
        "gomod"
      ],
      "minimumReleaseAge": "3 days",
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": true,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Ignore specific dependencies",
      "matchManagers": [
        "gomod"
      ],
      "ignoreDeps": ["github.com/tuihub/protos"]
    },
    {
      "description": "Opt-out minimum Go version updates: https://github.com/renovatebot/renovate/issues/16715",
      "matchDatasources": [
        "golang-version"
      ],
      "enabled": false
    }
  ],
  "platformAutomerge": true
}
